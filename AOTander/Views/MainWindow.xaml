<Window x:Class="AOTander.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AOTander.ViewModels"
        xmlns:models="clr-namespace:AOTander.Models"
        xmlns:local="clr-namespace:AOTander.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл"/>
            <MenuItem Header="О программе"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <ComboBox ItemsSource="{Binding Positions}" DisplayMemberPath="Position"/>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="Магазины" Grid.Column="0">
                <ListBox ItemsSource="{Binding Shops}" 
                         DisplayMemberPath="Address" 
                         SelectedItem="{Binding SelectedShop}"/>
            </GroupBox>
            <GroupBox Header="{Binding SelectedShop.Address, StringFormat='Сотрудники магазина, расположенного по адресу: {0}', FallbackValue='Сотрудники', TargetNullValue='Магазин не выбран'}"  Grid.Column="1">
                <DataGrid ItemsSource="{Binding SelectedShop.Employees}" 
                          IsReadOnly="False" 
                          AutoGenerateColumns="False"
                          GridLinesVisibility="Vertical"
                          VerticalGridLinesBrush="DarkGray"
                          AlternatingRowBackground="LightGray">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Отчество" Binding="{Binding Patronymic}"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}"/>
                        <DataGridTemplateColumn Header="Должность">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="vm:MainWindowViewModel">
                                    <ComboBox ItemsSource="{Binding DataContext.Positions, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                              DisplayMemberPath="Position"/>

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Отработано часов" Binding="{Binding HoursWorked}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
